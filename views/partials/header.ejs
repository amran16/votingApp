<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>Voting App</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.3/semantic.min.css">
        <link rel="stylesheet" href="/stylesheets/app.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js"></script>
    </head>
  <body>
    <div class="ui fixed inverted menu">
          <div class="ui container">
              <a href="/" class="header item">
                <i class="handshake icon"></i>
                    Polls
              </a>
               <div class="right menu">
                 <% if(!currentUser){ %>
                   <a href="/register" class="item">Sign up</a>
                   <a href="/signin" class="item">Sign in</a>
                <% } else { %>
                  <div class="item">Signed in as <%= currentUser.username %></div>
                  <a href="/polls/new" class="item">New Poll</a>
                  <a href="/signout" class="item">Sign out</a>
                <% } %>
              </div>
          </div>
    </div>

    <div class="ui container flash">

     <% if(error && error.length > 0){ %>
         <div class="ui negative message" role="alert">
             <%= error %>
         </div>
     <% } %>
     <% if(success && success.length > 0){ %>
        <div class="ui positive message" role="alert">
             <%= success %>
         </div>
     <% } %>

 </div>
